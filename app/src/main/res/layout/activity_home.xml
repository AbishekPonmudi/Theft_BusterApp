<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/WhiteSmoke"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="15dp"
        android:paddingLeft="25dp"
        android:paddingRight="25dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-black"
            android:letterSpacing="0.04"
            android:text="@string/anti_theft_detection"
            android:textColor="@color/black"
            android:textSize="23sp" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:elevation="10dp"
        android:background="@drawable/rectangle"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_gravity="center"
        android:layout_marginTop="50dp">

        <ImageView
            android:id="@+id/imageButton3"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:layout_margin="0dp"
            android:adjustViewBounds="true"
            android:background="@drawable/antitheft2"
            android:contentDescription=""
            android:padding="50dp"
            android:scaleType="centerInside"
            tools:ignore="ContentDescription" />

    </LinearLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:scrollbars="none">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <RelativeLayout
                android:id="@+id/r1"
                android:layout_width="200dp"
                android:layout_height="160dp"
                android:paddingLeft="15dp"
                android:paddingTop="15dp"

                android:paddingRight="15dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="10dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:elevation="10dp">

                        <ImageView
                            android:id="@+id/i1"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_marginTop="10dp"
                            android:elevation="10dp"

                            android:src="@drawable/proximity" />

                        <TextView
                            android:id="@+id/tt1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:layout_toRightOf="@+id/i1"
                            android:fontFamily="sans-serif-black"
                            android:letterSpacing="0.03"
                            android:text="Proximity Detection"
                            android:textColor="#000000"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/tt1"
                            android:layout_marginStart="-53dp"
                            android:layout_marginTop="50dp"
                            android:layout_toEndOf="@+id/i1"
                            android:text="Detect Remove from Pocket"
                            android:textColor="#252627"
                            android:textSize="14sp" />

                        <Switch
                            android:id="@+id/sProximity"
                            android:layout_width="wrap_content"
                            android:layout_height="93dp"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentEnd="true"
                            android:layout_marginTop="22dp"
                            android:layout_marginEnd="0dp"
                            android:text="Proximity"
                            android:textColor="#000000"
                            android:textSize="12sp"
                            tools:ignore="UseSwitchCompatOrMaterialXml" />

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/r2"
                android:layout_width="210dp"
                android:layout_height="160dp"
                android:layout_below="@id/r1"
                android:layout_marginStart="-9dp"
                android:layout_marginTop="-160dp"
                android:layout_toEndOf="@+id/r1"
                android:paddingLeft="15dp"
                android:paddingTop="15dp"
                android:paddingRight="15dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="10dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:elevation="10dp">

                        <ImageView
                            android:id="@+id/i2"
                            android:layout_width="60dp"
                            android:layout_height="50dp"
                            android:layout_marginTop="10dp"
                            android:elevation="10dp"
                            android:src="@drawable/shake" />

                        <TextView
                            android:id="@+id/tt2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:layout_toEndOf="@+id/i2"
                            android:fontFamily="sans-serif-black"
                            android:letterSpacing="0.03"
                            android:text="Motion Detection"
                            android:textColor="#000000"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <Switch
                            android:id="@+id/sMotion"
                            android:layout_width="wrap_content"
                            android:layout_height="93dp"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentBottom="true"
                            android:layout_marginEnd="2dp"
                            android:layout_marginBottom="37dp"
                            android:text="Motion  "
                            android:textColor="#000000"
                            android:textSize="12sp"
                            tools:ignore="UseSwitchCompatOrMaterialXml" />

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/r3"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:paddingLeft="15dp"
                android:paddingTop="15dp"
                android:elevation="10dp"
                android:paddingRight="15dp"
                android:layout_below="@id/r2">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:cardElevation="10dp"
                    app:cardCornerRadius="8dp"
                    android:layout_marginTop="12dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:elevation="10dp">

                        <ImageView
                            android:id="@+id/i3"
                            android:layout_width="60dp"
                            android:layout_height="50dp"
                            android:elevation="10dp"
                            android:layout_marginTop="10dp"
                            android:src="@drawable/charger"/>

                        <TextView
                            android:id="@+id/tt3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Charger Detection"
                            android:layout_toEndOf="@+id/i3"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:fontFamily="sans-serif-black"
                            android:textColor="#000000"
                            android:layout_marginTop="10dp"
                            android:layout_marginStart="20dp"
                            android:letterSpacing="0.03"/>

                        <Switch
                            android:id="@+id/sCharger"
                            android:layout_width="wrap_content"
                            android:layout_height="93dp"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentBottom="true"
                            android:layout_marginEnd="4dp"
                            android:layout_marginBottom="14dp"
                            android:text="Charger"
                            android:textColor="#000000"
                            android:textSize="12sp"
                            tools:ignore="UseSwitchCompatOrMaterialXml" />

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/r6"
                android:layout_width="200dp"
                android:layout_height="160dp"
                android:paddingLeft="15dp"
                android:paddingTop="15dp"
                android:paddingRight="15dp"
                android:layout_below="@id/r3">

                <androidx.cardview.widget.CardView
                    android:id="@+id/headset1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="10dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:elevation="10dp">

                        <ImageView
                            android:id="@+id/i6"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_marginTop="10dp"
                            android:elevation="10dp"
                            android:src="@drawable/proximity" />

                        <TextView
                            android:id="@+id/headset"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:layout_toRightOf="@+id/i6"
                            android:layout_marginTop="10dp"
                            android:fontFamily="sans-serif-black"
                            android:letterSpacing="0.03"
                            android:text="Headset Detection"
                            android:textColor="#000000"
                            android:textSize="18sp"
                            android:textStyle="bold" />




                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/r7"
                android:layout_width="210dp"
                android:layout_height="160dp"
                android:layout_below="@id/r6"
                android:layout_marginStart="-9dp"
                android:layout_marginTop="-160dp"
                android:layout_toEndOf="@+id/r6"
                android:paddingLeft="15dp"
                android:paddingTop="15dp"
                android:paddingRight="15dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="10dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:elevation="10dp">

                        <ImageView
                            android:id="@+id/i7"
                            android:layout_width="60dp"
                            android:layout_height="50dp"
                            android:layout_marginTop="10dp"
                            android:elevation="10dp"
                            android:src="@drawable/shake" />

                        <TextView
                            android:id="@+id/tt7"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@+id/i7"
                            android:fontFamily="sans-serif-black"
                            android:letterSpacing="0.03"
                            android:layout_marginTop="10dp"
                            android:text="Deep Clean"
                            android:textColor="#000000"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <Switch
                            android:id="@+id/sMotion2"
                            android:layout_width="wrap_content"
                            android:layout_height="93dp"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentBottom="true"
                            android:layout_marginEnd="8dp"
                            android:layout_marginBottom="1dp"
                            android:text="Start"
                            android:textColor="#000000"
                            android:textSize="12sp"
                            tools:ignore="UseSwitchCompatOrMaterialXml" />

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

            </RelativeLayout>


        </RelativeLayout>

    </androidx.core.widget.NestedScrollView>

</LinearLayout>
